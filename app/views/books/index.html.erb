      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    
    <div class="div">
        <label>Title</label>
        <div class="input"><%= f.text_field :title %></div>
    </div>

    <div class="div">
        <label class="b">Body</label>
